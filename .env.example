# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost/emdad_global
# Alternative PostgreSQL: postgresql://username:password@localhost/emdad_global

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@emdadglobal.com

# Admin Configuration
ADMIN_EMAIL=admin@emdadglobal.com
COMPANY_NAME=Emdad Global
COMPANY_EMAIL=info@emdadglobal.com
COMPANY_PHONE=+20-xxx-xxx-xxxx
COMPANY_WHATSAPP=+20-xxx-xxx-xxxx
COMPANY_ADDRESS=Cairo, Egypt

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Security
WTF_CSRF_TIME_LIMIT=3600
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key

# Languages
LANGUAGES=en,ar
DEFAULT_LANGUAGE=en

# SEO
SITE_URL=https://emdadglobal.com
SITE_NAME=Emdad Global - Egyptian Agricultural Exports
